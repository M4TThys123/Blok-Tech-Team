	<section>
		<h1>Games aanpassen</h1>
		<p>Vewijder of voeg games toe aan favorieten</p>
	</section>

	<section id="addMovies">
		<h2>Games toevoegen</h2>	
        <form action="/addmovie" method="POST">
            <ul>
			{{#each movies}}  
				<li>
                     <input type="checkbox" name="moviename" value="{{this.posterUrl}}" />
	                <h3>{{this.name}}</h3>
					<label for="myCheckbox1"><img src="{{this.posterUrl}}" /></label>
                </li>
                {{/each}}
        	</ul>

              <input class="button" type="submit">    
        </form>
    </section>

    <section id="addMovies">

		<h2>Games verwijderen</h2>

		<form action="/removemovie" method="POST">
            <ul>
			{{#each favoritemovies}}  
				<li>
                     <input type="checkbox" name="moviename" value="{{this}}" />
	                <!-- <h3>{{this}}</h3> -->
					<label for="myCheckbox1"><img src="{{this}}" /></label>
                </li>
                {{/each}}
        </ul>
			<input class="button" type="submit">
		</form>
	</section>	

